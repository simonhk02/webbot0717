# 生產環境配置範例
# 請根據你的VPS實際情況修改以下設置

# 伺服器配置
PORT=3002
SESSION_SECRET=你的超安全密鑰請更改這個
NODE_ENV=production

# Redis 配置 (請修改為你的VPS內部IP或localhost)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# 資料庫配置
DB_PATH=/var/www/whatsapp-bot/whatsappBot.db

# Google API 配置 (從你的本地環境複製)
GOOGLE_CLIENT_ID=你的Google客戶端ID
GOOGLE_CLIENT_SECRET=你的Google客戶端密鑰
GOOGLE_REDIRECT_URI=http://你的VPS_IP:3002/auth/google/callback

# AI 配置 (從你的本地環境複製)
ANTHROPIC_API_KEY=你的Anthropic API密鑰

# 生產環境特定配置
LOG_LEVEL=info
MAX_CONNECTIONS=100
TIMEOUT=30000

# 安全配置
HELMET_ENABLED=true
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=1000 